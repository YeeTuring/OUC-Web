<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ems.mapper.StudentMapper">

    <insert id="insert" parameterType="com.ems.entity.Student" useGeneratedKeys="true">
        insert into student (username,password,name,avatar,role,sex,code,college_id,score)
        values (#{username},#{password},#{name},#{avatar},#{role},#{sex},#{code},#{college_id},#{score})
    </insert>

    <update id="updateById" parameterType="com.ems.entity.Student">
        update student
        set username = #{username},password=#{password},name=#{name},avatar=#{avatar},role=#{role},sex=#{sex},code=#{code},college_id=#{college_id},score=#{score}
        where id = #{id}
    </update>

</mapper>